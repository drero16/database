<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Animal type</th>
      <th>Sex</th>
      <th>Name</th>
      <th>Description</th>
      <th>Lost on</th>
      <th>Lost in</th>
      <th>User</th>
      <th>Race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.animal_type %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.name %></td>
        <td><%= pet.description %></td>
        <td><%= pet.lost_on %></td>
        <td><%= pet.lost_in %></td>
        <td><%= pet.user %></td>
        <td><%= pet.race %></td>
        <td><%= link_to 'Show', pet %></td>
        <td>
        <% if can? :update, pet %>
          <%= link_to 'Edit', edit_pet_path(pet) %>
        <% end %>
        </td>
        <td>
        <% if can? :destroy, pet %>
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Pet %>
<%= link_to 'New Pet', new_pet_path %>
<% end %>
