<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">
        <%=image_tag("logoram.png", alt: "example")%>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
      <li class="navbar-li"><a href="#">Acerca de RAM</a></li>
      <li class="navbar-li dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Registra tu animal <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Mascota perdida</a></li>
            <li><a href="#">Animal encontrado</a></li>
            <li><a href="#">Animal en riesgo</a></li>
            <li><a href="#">Mascota en adopción</a></li>
          </ul>
        </li>
        <li class="navbar-li"><a href="#">Información de Interés</a></li>
        <li class="navbar-li"><a href="#">Eventos RAM</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> 
            <% if user_signed_in? %>
              <% if current_user.avatar.present? %>
            <%=image_tag(current_user.avatar(:thumb), alt: "example",width:"50",height: "50", class: "img-circle" )%>
              <% else %>
                <%=image_tag("profile-pictures.png", alt: "example",width:"50",height: "50" )%>
              <%end %>
          <span class="caret"></span></a>
          <ul class="dropdown-menu">

            <li><%= link_to "Edit profile", edit_user_registration_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'log-out-btn'%></li>
          <% else %>
            <%=image_tag("profile-pictures.png", alt: "example",width:"50",height: "50" )%>
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
            <li><%= link_to "Iniciar sesión", new_user_session_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Registrarse", new_user_registration_path %></li>
            <% end %>
          </ul>
        </li>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="content"  id="loginContainer">
<%= yield %>
</div>

