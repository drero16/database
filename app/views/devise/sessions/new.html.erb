<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "auth" %>
<% end %>

<div class="panel panel-default col-md-4 col-md-offset-4">
<h2>Iniciar sesión</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-group'}) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
      <%= f.hidden_field :remember_me, :value => 1 %>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar",class:"btn btn-primary",data: { disable_with: "Por favor espere..." } %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

</div>