<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "auth" %>
<% end %>

<div class="panel panel-default col-md-4 col-md-offset-4">
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-group'}) do |f| %>
  <%= devise_error_messages! %>
<div class="form-group">
    <%= f.label :name, "Nombre", class: "control-label" %><br />
    <%= f.text_field :name, autofocus: true, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "control-label" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control"%>

  </div>

  <div class="form-group">
    <%= f.label :phone, "Whatsapp", class: "control-label" %><br />
    <%= f.telephone_field :phone, class: "form-control"%>
  </div>

   <div class="form-group">
      <%= f.label :image_id,"¡Sube una foto de perfil!", class: "control-label" %>    
      <%= f.file_field :image_id, type: :file, multiple: false,class: "form-control" %>
  </div>  

  <div class="form-group">
    <%= f.label :password,"Contraseña", class: "control-label" %>
    <% if @minimum_password_length %>
    <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,"Confirmar Contraseña", class: "control-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Listo!" ,class:"btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>