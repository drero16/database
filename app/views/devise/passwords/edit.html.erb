<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "auth" %>
<% end %>
<div class="panel panel-default col-md-4 col-md-offset-4">
<h2>Cambiar contraseña</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => 'form-group' }) do |f| %>
  <% if devise_error_messages!.present? %>
  <div class="alert alert-danger">
  <%= devise_error_messages! %>
  </div>
  <% end %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Nueva contraseña", class: "control-label" %><br />
    <% if @minimum_password_length %>
      <em>Mínimo (<%=@minimum_password_length %> carácteres.)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control", "required"=>true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "control-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", "required"=>true %>
  </div>

  <div class="form-group">
    <%= f.submit "Cambiar contraseña",class:"btn btn-warning",data: { disable_with: "Por favor espere..." }  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>