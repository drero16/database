<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "auth" %>
<% end %>
<div class="panel panel-default col-md-4 col-md-offset-4">
<h2>¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-group' }) do |f| %>
  <% if devise_error_messages!.present? %>
  <div class="alert alert-danger">
  <%= devise_error_messages! %>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class: "control-label" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", "required"=>true %>
  </div>

  <div class="form-group">
    <%= f.submit "Enviar instrucciones de recuperación.",class:"btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>