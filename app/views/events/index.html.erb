
<div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1 class="text-center">Eventos RAM</h1>
            <% if can? :create, Event %>
            <%= link_to "Crear evento", new_event_path, class: "btn btn-success pull-right"%>
            <% end %>
          </div>
        </div>
        <% @events.each do |event| %>
        <div class="well search-result">
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <% if event.images.first.present? %>
                <%= image_tag event.images.first.image.url, class: "img-responsive center-block fixed" %>
              <% elsif %>
                <%= image_tag('logo.jpg', :class => "img-responsive center-block fixed")%>
              <% end %>
                </a>
            </div>
            <div class="col-md-5">
                <h3><%=event.title%></h3>
                <h4><%=event.date_event.strftime("%d/%m/%Y")%></h4>
                <p><%=event.description%></p>
                <%= link_to event, class: "btn btn-primary" do %>
                Ver más <span class="glyphicon glyphicon-chevron-right">
                <% end %>
            </div>
        </div>
        </div>
        
        <% end %>
        <div class="row row-centered" ><%= will_paginate @notifications, :next_label => ">>", :previous_label => "<<"%>
        </div>
    </div>
</div>




