<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "centered-columns" %>
<% end %>

<% content_for :js do %>
  <%= javascript_include_tag "gmaps" %>
  <script>
    $(document).ready(function() { 
  if( $('#gmaps-canvas').length  ) {
    gmaps_init();
    autocomplete_init();
  }; 
  

});
  </script>
<% end %>

<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
        <h1 class="page-header text-center">Busca un animal encontrado</h1>
        <h5 class="text-center"> Utiliza los filtros de abajo que te ayudaran a especificar tu busqueda.</h5>
  </div>


  <form >
    <div class="row row-centered">
      <div class="col-xs-8 col-md-8 col-centered">
        <label for="gmaps-input-address" class="control-label">Dirección</label>
        <input type="text"  class="form-control" id="gmaps-input-address">
        <div id='gmaps-error'></div>
                <div id='gmaps-canvas' class=" hidden"></div>
      </div>
      <div class="col-xs-4 col-md-2  col-centered">
        <button type="submit" class="btn btn-default">Listo!</button>
      </div>
    </div>
    
    <div class="row row-centered">
      <div class="col-xs-4 col-md-2  col-centered">
        <label for="animal">Animal</label>
        <select class="form-control" id="animal">
          <option>Perro</option>
          <option>Gato</option>
        </select>
      </div>

      <div class="col-xs-4 col-md-2  col-centered">
        <label for="raza">Raza</label>
        <select class="form-control" id="raza">
          <option>Pitbull</option>
          <option>Pastor Alemán</option>
        </select>
      </div>

      <div class="col-xs-4 col-md-2  col-centered">
        <label for="sexo">Sexo</label>
        <select class="form-control" id="sexo">
          <option>Macho</option>
          <option>Hembra</option>
        </select>
      </div>

      <div class="col-xs-4 col-md-2  col-centered">
        <label for="fecha">Fecha</label>
        <input type="date" id="fecha" class="form-control">
      </div>

      <div class="col-xs-4 col-md-2  col-centered">
        <label for="sort">Ordenar por</label>
        <select class="form-control" id="sort">
          <option>Recientes</option>
          <option>Antiguos-</option>
          <option>Cercanía</option>
          <option>Raza</option>
          <option>Sexo</option>
        </select>
      </div>

    </div>
  </form>
</div>


<div class="row row-centered">
<div class="panel panel-default col-md-8 col-centered">
<% @animals.each do |animal| %>
<div class="well search-result">
  <div class="row">
    <a href="#">
        <div class="col-xs-6 col-sm-3 col-md-5 col-lg-4">
          <% unless animal.images.empty? %>
            <%= link_to image_tag(animal.images.first.image.url(:original), :class=>"img-responsive" ), animal%>
            <% end %>
        </div>
        <div class="col-xs-6 col-sm-9 col-md-7 col-lg-8 title">
            <h3><%= animal.location%></h3>
            <p><%= animal.description %>.</p>
        </div>
    </a>
  </div>
</div>
<%end%>

<table>
  <thead>
    <tr>
      <th>Animal type</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Location</th>
      <th>Description</th>
      <th>User</th>
      <th>Race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.animal_type %></td>
        <td><%= animal.age %></td>
        <td><%= animal.sex %></td>
        <td><%= animal.location %></td>
        <td><%= animal.description %></td>
        <td><%= animal.user.name   %></td>
        <td><%= animal.race.name %></td>
        <td><%= link_to 'Show', animal %></td>
          <td>
          <% if can? :update, animal %>
              <%= link_to 'Edit', edit_animal_path(animal) %>
          <% end%>
          </td>
        
        <td>
        <% if can? :destroy, animal %>
          <%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Animal %>
<%= link_to 'New Animal', new_animal_path %>
<% end %>

